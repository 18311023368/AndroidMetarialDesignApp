<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="md.nieyt.com.androidmetarialdesignapp.MainActivity">
    <Button
        android:id="@+id/textInputLayout"
        android:layout_width="match_parent"
        android:text="TextInputLayout使用"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/floatingActionButton"
        android:layout_width="match_parent"
        android:text="FloatingActionButton使用"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/snackbar"
        android:layout_width="match_parent"
        android:text="Snackbar使用"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:text="TabLayout使用"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:text="NavigationView使用"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:text="AppBarLayout+CoordinatorLayout使用"
        android:layout_height="wrap_content"/>
    <Button
    android:id="@+id/CollapsingToolbarLayout"
    android:layout_width="match_parent"
    android:text="CollapsingToolbarLayout使用"
    android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/demo"
        android:layout_width="match_parent"
        android:text="总结"
        android:layout_height="wrap_content"/>
</LinearLayout>
